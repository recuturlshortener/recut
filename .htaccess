RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /error.html [L]

# Enable HTTPS and enforce secure connections
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# Content Security Policy to control resources the user agent is allowed to load
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self'; font-src 'self';"

# Prevent clickjacking by blocking framing of your site
Header always set X-Frame-Options "DENY"

# Control which features can be used in your site
Header always set Permissions-Policy "geolocation=(self), microphone=(), camera=()"

# Enable cross-site scripting protection
Header always set X-XSS-Protection "1; mode=block"

# Prevent sniffing of MIME types
Header always set X-Content-Type-Options "nosniff"

# Avoid caching of sensitive information
Header always set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
Header always set Pragma "no-cache"
